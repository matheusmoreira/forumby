source :rubygems

gem 'rake', '~> 0.8.7'
gem 'rails'

# Authentication
gem 'devise'

# Authorization
gem 'cancan'

# Pagination
gem 'will_paginate', '3.0.pre2'

# JavaScript frameworks and libraries
gem 'jquery-rails'

# Other Gems
gem 'compass'
gem 'haml'
gem 'decent_exposure'

# Gems for development
group :development do

  # SQLite database
  gem 'sqlite3'

  # Compass CSS statistics
  gem 'css_parser'
end

group :development, :test do

  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'shoulda'
end
