= form_for nested_forum, :as => :nested_forum, :url => { :controller => 'forums/nested_forums', :action => :create } do |f|

  = f.label :name
  %br/
  = f.text_field :name

  %br/

  = f.label :description
  %br/
  = f.text_area :description

  %br/

  = f.label :category
  %br/
  = f.collection_select :category_id,
                        Category.all,
                        :id,
                        :name,
                        :include_blank => t('forums.nested_forums.form.blank_category')

  %br/

  = f.submit submit
