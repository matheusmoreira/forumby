= form_for forum do |f|

  = f.label :name
  %br/
  = f.text_field :name

  %br/

  = f.label :description
  %br/
  = f.text_area :description

  %br/

  = f.label :category
  %br/
  = f.collection_select :category_id,
                        Category.all,
                        :id,
                        :name,
                        :include_blank => t('forums.form.blank_category')

  %br/

  = f.label :parent_forum
  %br/
  = f.collection_select :parent_forum_id,
                        Forum.all,
                        :id,
                        :name,
                        :include_blank => t('forums.form.blank_parent_forum')

  %br/

  = f.submit submit
